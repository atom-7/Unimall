.wrapper {
  display: flex;
  margin-top: 70rpx;
  color: #333;
}
.tab_list {
  height: 1080rpx;
  width: 200rpx;
}
.tab_list .tab {
  padding: 10rpx 0;
  padding-left: 2rpx;
  width: 200rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 28rpx;
}
.tab_list .tab .title {
  width: 100%;
  height: 100%;
  line-height: 56rpx;
  display: flex;
  justify-content: center;
}
.tab_content {
  height: 1080rpx;
  overflow: hidden;
  flex: 1;
  background-color: #ffffff;
}
.tab_content .tab_detail {
  padding: 20rpx;
}
.tab_content .tab_detail .product_list {
  margin-top: 40rpx;
  display: flex;
  flex-wrap: wrap;
}
.tab_content .tab_detail .product_list .item {
  margin-bottom: 20rpx;
  text-align: center;
  height: 150rpx;
  width: 33.33%;
  display: flex;
  justify-content: center;
  align-content: center;
}
.tab_content .tab_detail .product_list .item .desc {
  font-size: 28rpx;
}
.tab_content .tab_detail .product_list image {
  width: 135rpx;
  height: 80rpx;
  margin-bottom: 8rpx;
}
.tab_content .tab_detail .content_head {
  text-align: center;
  display: flex;
  align-content: center;
  justify-content: center;
}
.tab_content .tab_detail .content_head::before,
.tab_content .tab_detail .content_head::after {
  content: "";
  display: inline-block;
  margin-right: 30rpx;
  width: 2rpx;
  height: 40rpx;
  background-color: #999;
  transform: rotate(20deg);
}
.tab_content .tab_detail .content_head::after {
  margin-left: 30rpx;
  transform: rotate(20deg);
}
.head {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 2;
}
.active {
  border-left: 8rpx solid #ff0000;
  color: #ff0000;
}
