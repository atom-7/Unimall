.address {
  padding: 10rpx 0;
  border-bottom: 1px solid #ccc;
}
.cart_list {
  padding: 16rpx;
}
.cart_list .name {
  margin-bottom: 10rpx;
}
.cart_list .prod_Lsit .item {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #ddd;
}
.cart_list .prod_Lsit .item .img {
  width: 240rpx;
  padding: 0rpx 20rpx;
}
.cart_list .prod_Lsit .item .detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cart_list .prod_Lsit .item .detail .title {
  overflow: hidden;
  text-overflow: ellipsis;
  color: #333;
  font-size: 30rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 30rpx;
}
.cart_list .prod_Lsit .item .detail .info {
  display: flex;
  justify-content: space-between;
}
.cart_list .prod_Lsit .item .detail .info .price {
  color: var(--color);
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.cart_list .prod_Lsit .item .detail .info .count {
  display: flex;
}
.cart_list .prod_Lsit .item .detail .info .count .number {
  margin: 0 10rpx;
}
.calc {
  position: fixed;
  bottom: 0;
  width: 100vw;
  height: 100rpx;
  background-color: #fff;
  border-top: 1px solid #ccc;
  display: flex;
}
.calc .chk {
  flex: 1;
  font-size: 26rpx;
  text-align: center;
  margin-top: 26rpx;
}
.calc .chk checkbox {
  color: var(--color);
}
.calc .total_price {
  flex: 2;
  text-align: right;
  padding-right: 10rpx;
}
.calc .total_price .top {
  display: flex;
  justify-content: flex-end;
}
.calc .total_price .top > view {
  color: var(--color);
}
.calc .total_price .bottom {
  color: #999;
}
.calc .count {
  flex: 1;
  color: white;
  background-color: var(--color);
  display: flex;
  justify-content: center;
  align-items: center;
  font-style: 28rpx;
}
